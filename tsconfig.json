{
    "compilerOptions": {
      "target": "es2020",
      "module": "CommonJS",
      "lib": [
        "ES2020"
      ],
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "moduleResolution": "node",
      "outDir": "lib/cjs",
      "declarationDir": "./lib",
      "rootDir": "package",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": [
      "package/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.test.ts",
      "lib"
    ]
}